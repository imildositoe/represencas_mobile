<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="61dp" />

    <ImageView
        android:id="@+id/img_photo_not"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:contentDescription="@null"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_person_black_24dp" />

    <TextView
        android:id="@+id/tv_titulo_not"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="titulo"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_preview_not"
        app:layout_constraintEnd_toStartOf="@+id/tv_data_not"
        app:layout_constraintStart_toEndOf="@+id/img_photo_not"
        app:layout_constraintTop_toTopOf="@+id/img_photo_not" />

    <TextView
        android:id="@+id/tv_preview_not"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="preview"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_photo_not"
        app:layout_constraintEnd_toStartOf="@+id/tv_turma_not"
        app:layout_constraintStart_toEndOf="@+id/img_photo_not"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo_not" />

    <TextView
        android:id="@+id/tv_turma_not"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="turma"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_preview_not"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_preview_not" />

    <TextView
        android:id="@+id/tv_data_not"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="00 / 00 / 0000"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_titulo_not"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_titulo_not" />

</androidx.constraintlayout.widget.ConstraintLayout>